@{
}

@{
    ViewData["Title"] = "Reses libres para asignar";
}

@using Estancia
@model List<Res>


@if (TempData["MensajeError"] != null)
{
    <p class="text-danger">@TempData["MensajeError"]</p>
}
@if (TempData["MensajeExito"] != null)
{
    <p class="text-success">@TempData["MensajeExito"]</p>
}

<h1>Reses libres para asignar</h1>

@if (Model.Count > 0)
{
    <table class="table table-hover table-striped align-items-center table-bordered">
        <thead class="text-center">
        <th> Caravana </th>
        <th> Fecha Nacimiento</th>
        <th> Sexo</th>
        <th> Es Libre</th>
        <th> Asignar</th>
        </thead>
        <tbody>
        @foreach (Res unR in Model)
        {
                <tr class="text-center">
                    <td>@unR.Id</td>
                    <td>@unR.FechaNacimiento.ToShortDateString()</td>
                    <td>@unR.Sexo</td>
                    <td>@unR.Libre</td>
                    <td><a href="/Potreros/ListarPotreros/@unR.Id" class="btn btn-primary">Agregar</a></td>
                </tr>
        }
        </tbody>
    </table>
}
else
{
    <p class="text-info">No hay animales libres</p>
}

