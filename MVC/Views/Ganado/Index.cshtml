@{
    ViewData["title"] = "Animales";
}
@using Estancia

<h1>Listado de Animales</h1>

@if (ViewBag.Mensaje != null)
{
    <p class="text-success">@ViewBag.Mensaje</p>
}

@if (ViewBag.Vacunado != null)
{
    <p class="text-success">@ViewBag.Vacunado</p>
}

@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}


@if (ViewBag.Ganado.Count > 0)
{
    <table class="table table-hover table-striped align-items-center table-bordered">
        <thead class="text-center">
        <th>Caravana</th>
        <th>Raza</th>
        <th>Sexo</th>
        <th>Peso</th>
        <th>Tipo</th>
        <th>Vacunar</th>
        </thead>
        <tbody>
            @foreach (Res unaR in ViewBag.Ganado)
            {
                <tr class="text-center">
                    <td>@unaR.Id</td>
                    <td>@unaR.Raza</td>
                    <td>@(unaR.Sexo == Sexo.FEMALE ? "Hembra" : "Macho")</td>
                    <td>@unaR.PesoActual</td>
                    <td>@unaR.TipoRes()</td>
                    <td><a class="btn btn-primary" href="/Ganado/VacunarAnimal/@unaR.Id">Ir</a></td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <p class="text-danger">No hay animales ingresados</p>
}






