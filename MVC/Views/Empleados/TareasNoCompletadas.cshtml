@{
}

@{
    ViewData["Title"] = "Tareas no completadas";
}

@using Estancia
@model List<TareaAsignada>

<h1>Tareas no completadas</h1>

@if (Model != null)
{
    @if (Model.Count > 0)
    {
        <table class="table table-hover table-striped align-items-center table-bordered">
            <thead class="text-center">
            <th>Descripción</th>
            <th>Fecha Pactada</th>
            <th>Comentario</th>
            <th>Modificar</th>
            </thead>
            <tbody>
                @foreach (TareaAsignada unaTa in Model)
                {
                    <tr class="text-center">
                        <td>@unaTa.Tarea.Descripcion</td>
                        <td>@unaTa.FechaPactada.ToShortDateString()</td>
                        <td>@unaTa.Comentario</td>
                        <td><a class="btn btn-primary" href="/Tareas/Editar/@unaTa.Tarea.Id">Editar</a></td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p class="text-info">No tiene tareas pendientes.</p>
    }
}

@if(ViewBag.Mensaje != null)
{
    <p class="text-success">@ViewBag.Mensaje</p>
}

@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}