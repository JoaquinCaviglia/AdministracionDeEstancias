@{
}
@using Estancia
@model Peon

@if (Model != null)
{
    <table class="table table-hover table-striped align-items-center table-bordered">
        <thead class="text-center">
        <th>Nombre</th>
        <th>Email</th>
        <th>Fecha de Ingreso</th>
        <th>Residente</th>
        </thead>
        <tbody>
            <tr class="text-center">
                <td>@Model.Nombre</td>
                <td>@Model.Email</td>
                <td>@Model.FechaIngreso.ToShortDateString()</td>
                <td>@(Model.EsResidente ? "Si" : "No")</td>
            </tr>
        </tbody>
    </table>
}

@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}